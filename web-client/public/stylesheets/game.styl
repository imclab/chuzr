// Styles for all games //

#chuzOff, #rateMe
  width: 80%
  align: center
  margin: 0 auto

#header
  text-align: center


// Chuzoff styles

h3
  color: orange

.productImg
  width: 300px
  height: 300px
  border: 1px solid #5bc0de
  &:hover
    border: 1px solid orange

#leftProduct
  float: left

#rightProduct
  float: right

.highlight
  width: 300px
  height: 300px
  color: #5bc0de
  &:hover
    opacity: 0.8
    color: orange

#results
  margin-top: 370px

.product
  text-align: center



// Rateme styles

.product-name
  color: #5bc0de

#current-rating
  color: orange
  font-size: 3em

.rate-slider, .rating, .rate-button
  postion: absolute
  padding-left: 50px


// Up down styles

.arrow
  height: 200px
  width: 192px
