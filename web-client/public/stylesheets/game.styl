// Styles for all games //

#chuzOff, #rateMe
  width: 80%
  align: center
  margin: 0 auto
  margin-top: 15px
  height: 350px

#header
  text-align: center


// Chuzoff styles

.productImg
  width: 300px
  height: 300px

#leftProduct
  float: left

#rightProduct
  float: right

.highlight
  width: 300px
  height: 300px
  color: #5bc0de
  &:hover
    opacity: 0.8
    color: orange

#results h3
  text-align: center

.product
  text-align: center

// Rateme styles

.rate-me-title
  color: #5bc0de

#current-rating
  color: orange
  font-size: 3em

.rate-slider, .rating, .rate-button
  postion: absolute
  padding-left: 50px


// Up down styles

.arrow
  height: 200px
  width: 192px
