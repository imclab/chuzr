g1 = #F2F2F2
g2 = #E0E0E0

body
  padding: 50px
  font: 16px "Lucida Grande", Helvetica, Arial, sans-serif  

a
  padding: 10px
  text-decoration: none 
  color: #000000
 
a:hover
  opacity: 0.5
  
#nav-bar
  position: fixed
  padding: 5px
  height: 25px
  width: 100%
  top: 0px
  left: 0%
  background-color: #F1EFFF
  background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(g1), to(g2))
  background: -webkit-linear-gradient(top, g1, g2)
  background: -moz-linear-gradient(top, g1, g2)
  background: -ms-linear-gradient(top, g1, g2)
  background: -o-linear-gradient(top, g1, g2)

#nav-bar-right
  position: fixed
  top: 5px
  right: 2%

#search
  height: 20px
  border: 0px
  border-radius: 20px
  opacity: 0.5
  
#footer
  padding: 10px
  position: fixed
  bottom: 0px
  left: 0px
  width: 100%
  text-align: center
  background-color: #2D4A6E

#side-nav
  position: fixed
  top: 5%
  left: 2%
  width: 15%

#main-content
  position: fixed
  top: 5%
  left: 20% 
  

#side-nav-links
  padding: 0px
  margin: 0px
  list-style-type: none
