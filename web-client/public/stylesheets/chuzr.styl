html, body
  font: 16px "Lucida Grande", Helvetica, Arial, sans-serif  
  height: 100%
  width: 100%
  overflow: hidden

.navbar
  background-color: rgba(136, 159, 151, .5) !important
  margin-bottom: 0 !important

.table td
  border-top: none 

#wrap
  height: 100%
  width: 100%

a:hover
  opacity: 0.5

#content
  height:100%
  width:100%
  background-image:url('/images/texture3.png')


#main-content
  margin-top: 1%
  margin-bottom: 1%
  margin-left: 17%
  height: 84%
  background-color: rgba(256, 256, 256, .75)
  position: fixed
  width:82%
  overflow-y: auto !important

#side-nav
  top: 0px
  left: 0px
  padding-left: 10px
  padding-top: 50px
  padding-right: 10px
  background-color: rgba(256, 256, 256, .75)
  height: 100%
  width: 15%

#side-nav a img 
  display: block
  margin: auto

#side-nav-toggle
  margin-left: 0px
  padding-top: 20%
  padding-left: 5px
  opacity: 0.5
  background-color: rgba(256, 256, 256, .5)
  width: 7px
  height:100%

#contentBox
  height: 80%
  width: 90%
  margin: 0 auto

.columnLeft
  float: left
  margin: 0 auto
  width: 40%
  height: 100%
  border: 3px solid rgba(0, 0, 0, .1)
  background-color: rgba(220, 220, 220, .80)
  text-align: center
  -moz-border-radius: 15px
  border-radius: 15px

.columnRight
  float: right
  margin: 0 auto
  width: 40%
  height: 100%
  border: 3px solid rgba(0, 0, 0, .1)
  background-color: rgba(220, 220, 220, .80)
  text-align: center
  -moz-border-radius: 15px
  border-radius: 15px

.underline
  border-bottom: 5px solid rgba(0, 0, 0, .80)
  margin: 5%
  
#user-profile
  padding: 10px
  background-color: rgba(19,164,157, .12)

.right-label
  text-align: right !important

.sub-nav
  padding-left: 5px
  background-color:rgba(19,164,157, .12)

.product-capsule
    background-color: rgba(256, 256, 256, 0.8)
    -moz-box-sizing: border-box
    border: 1px solid #AAAAAA
    border-radius: 3px
    box-shadow: 0 0 2px 0 rgba(0, 0, 0, 0.25)
    float: left
    margin-bottom: 28px
    margin-left: 28px
    position: relative
    transition: all 0.2s ease-out 0s
    width: 224px

.capsule-top 
    text-align: center
    font-size: 14px
    padding: 6px
    position: relative

.capsule-image 
    -moz-border-bottom-colors: none
    -moz-border-left-colors: none
    -moz-border-right-colors: none
    -moz-border-top-colors: none
    background-color: rgba(0, 0, 0, 0.0)
    border-color: rgba(0, 0, 0, 0.0)
    border-image: none
    border-radius: 3px 3px 0 0
    border-style: solid solid none
    border-width: 4px 4px 0
    display: block

.capsule-image img 
    display: block
    height: 170px
    width: 214px

.capsule-bottom
    border-bottom: 1px solid #888888
    border-radius: 0 0 3px 3px
    padding: 2px
    position: relative
