extends layout



block content
  link(rel='stylesheet', href='/stylesheets/login.css')
  div(class='row-fluid')
    div(class='span7 hero-unit', id ='login')
      h1(class="text-center") Welcome to Chuzr
      hr
      center(id='login-content')
        h3 Sign-in
        form(class='form-vertical')
          input(type='text', id='inputEmail', placeholder='Email')
          br
          input(type='password', id='inputPassword', placeholder='Password')
          br
          button(type='submit', class='btn', id='signin') Sign In
        h4 or
        a(href='/signup')
          h3 Sign up
  script(src='/js/login.js')

