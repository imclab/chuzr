extends layout

block content
  div(id='forms')
    h2 Settings
    br
    form(class='form-horizontal')
      div(class='control-group')
        label(class='control-label', for='displayName') Display Name
        div(class='controls')
          input(type='text', id='displayName', placeholder='Display Name')
      div(class='control-group')
        label(class='control-label', for='name') Name
        div(class='controls')
          input(type='text', id='name', placeholder='Name')
      div(class='control-group')
        label(class='control-label') Birthday
        div(class='controls')
          input(class='span1', type='text', id='birthMonth', placeholder='MM', maxlength='2')
          input(class='span1', type='text', id='birthDate', placeholder='DD', maxlength='2')
          input(class='span1', type='text', id='birthYear', placeholder='YYYY', maxlength='4')