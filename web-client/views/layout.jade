doctype 5
html
  head
    title= title
    meta(name ='viewport', content='width=device-width, initial-scale=1.0')
    link(href="//netdna.bootstrapcdn.com/bootstrap/2.3.2/css/bootstrap.min.css", rel="stylesheet")
    link(href='/stylesheets/chuzr.css', rel='stylesheet')
    script(src='/js/chuzrModule.js')
    script(src='/js/user.js')
    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js')
    script(src='//netdna.bootstrapcdn.com/bootstrap/2.3.2/js/bootstrap.min.js')
    script(src='/js/sideNavToggle.js')
    block css
      
  body
    div(id='wrap')
      div(class='navbar navbar-default', id='nav-bar')
        div(class='navbar-inner')
          ul(class='nav')
            li:  a(href='/home')
              img(src="/images/chuzr-icons/png/home.png", height='30', width='30')
            li: a(href='/play') 
              img(src='/images/chuzr-icons/png/play.png', height='30',width='30')
            li: a(href='/social') 
              img(src='/images/chuzr-icons/png/social.png', height='30',width='30')
            li: a(href='/browse') 
              img(src='/images/chuzr-icons/png/browse.png', height='30',width='30')
            li: a(href='/trends') 
              img(src='/images/chuzr-icons/png/trends.png', height='30',width='30')
            li: a(href='/stuff') 
              img(src='/images/chuzr-icons/png/prize.png', height='30',width='30')
            

          ul(class='nav pull-right')
            li(class='dropdown'): a(href='#', class='dropdown-toggle', data-toggle='dropdown')
              img(src='/images/chuzr-icons/png/settings.png', height='25',width='25')
              b(class='caret')
              ul(class='dropdown-menu')
                li: a(href='/profile') Profile
                li: a(href='/settings') Settings
                li: a(href='/logout') Logout

      div(class='row-fluid', id='content')
        div(class='span1', id='side-nav')
 
        div(class='span10', id='main-content')
          block pagetitle
          div(id='page-content')
            block content
      
    div(class='navbar navbar-fixed-bottom',id='footer-nav')
      div(class='navbar-inner')
        ul(class='nav pull-right', id='footer-links')
          li: a(href='/about') about 
          li: a(href='/contact') contact 
          li: a(href='/FAQ') FAQ 
          li: a(href='/feedback') feedback 
          li: a(href='/privacy') privacy
      
    