doctype 5
html
  head
    title= title
    meta(name ='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/stylesheets/chuzr.css')
    link(href="//netdna.bootstrapcdn.com/bootstrap/2.3.2/css/bootstrap.min.css", rel="stylesheet")


  body
    div(id='wrap')
      div(id='nav-bar', class='navbar')
        div(class='navbar-inner')
          a(class='brand', href='/home') Chuzr
          ul(class='nav')
            li: a(href='/play') Play
            li: a(href='/social') Social
    
          ul(class='nav pull-right')
            form(class='navbar-search')
              input(type='text', class='search-query', placeholder='Search')
            li(class='dropdown'): a(href='#', class='dropdown-toggle', data-toggle='dropdown') Account
              b(class='caret')
              ul(class='dropdown-menu')
                li: a(href='/settings') Settings
                li: a(href='/logout') Logout
     
      
      div(class='span2', id='side-nav')
       a(href='/home')
         img(src="/images/chuzr-logo.png", height='128', width='232')
       ul(class='nav nav-tabs nav-list nav-stacked', id='side-nav-links')
          li: a(href='/home') Home 
          li: a(href='/play') Play 
          li: a(href='/browse') Browse       
          li(class='divider')
          li: a(href='/stuff') Stuff
          li: a(href='/social') Social
          li(class='divider')
          li: a(href='/settings') Settings

      div(class='span1',id='side-nav-toggle')
        h4(id='toggle-caret'):â—€


      div(class="row-fluid",id='content')  
        div(class='span8', id='main-content')
          block content
      
      div(id='nav-bar', class='navbar navbar-fixed-bottom')
        div(class='navbar-inner')
          ul(class='nav pull-right', id='footer-links')
            li: a(href='/about') about 
            li: a(href='/contact') contact 
            li: a(href='/FAQ') FAQ 
            li: a(href='/feedback') feedback 
            li: a(href='/privacy') privacy
      
    script(src='/js/jquery-1.10.2.js')
    script(src='/js/bootstrap.js')
    script(src='/js/sideNavToggle.js')


        

      