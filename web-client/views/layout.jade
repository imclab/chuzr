doctype 5
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/chuzr.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')

  body
    div(id='nav-bar', class='navbar')
      div(class='navbar-inner')
        a(class='brand', href='#') Chuzr
        ul(class='nav')
          li: a(href='/home') Home
          li: a(href='/play') Play
          li: a(href='/social') Social
        
        ul(class='nav pull-right')
          form(class='navbar-search')
            input(type='text', class='search-query', placeholder='Search')
          li(class='dropdown'): a(href='#', class='dropdown-toggle', data-toggle='dropdown') Account
            b(class='caret')
            ul(class='dropdown-menu')
              li: a(href='/settings') Settings
              li: a(href='/logout') Logout
            
            
          
    div(class='row-fluid')
      div(class='span2 offset1', id='side-nav')
       h1 Chuzr
         hr
       ul(class='nav nav-tabs nav-stacked', id='side-nav-links')
        li: a(href='/home') Home 
        li: a(href='/play') Play 
        li: a(href='/browse') Browse       
        hr
        li: a(href='/stuff') Stuff
        li: a(href='/social') Social
        hr
        li: a(href='/settings') Settings
        
      div(class='span5', id='main-content')
        block content
    
    
    div(class='row-fluid', id='footer')
      div(class='pull-right')
        ul(class='nav nav-pills')
          li: a(href='/about') about 
          li: a(href='/contact') contact 
          li: a(href='/FAQ') FAQ 
          li: a(href='/feedback') feedback 
          li: a(href='/privacy') privacy
      
    script(src='/js/jquery-1.10.2.js')
    script(src='/js/bootstrap.js')
